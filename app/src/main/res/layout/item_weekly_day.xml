<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_day_of_week"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="일"
            android:textColor="#868E96"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_weekly_day"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="#495057"
            android:textSize="16sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/iv_weekly_feel1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="14dp"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_good" />

        <ImageView
            android:id="@+id/iv_weekly_feel2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_good" />

        <ImageView
            android:id="@+id/iv_weekly_feel3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_good" />

        <TextView
            android:id="@+id/tv_weekly_feel_rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="+1"
            android:textColor="#343A40"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>