<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#f8f9fa">

    <TextView
        android:id="@+id/tv_date_week_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:text="1.2"
        android:textColor="#495057"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_week_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:ellipsize="end"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:maxEms="10"
        android:maxLines="1"
        android:text="dfagadfgadsfadlnadagafgaafgafgjadlfnlasdjgdf"
        android:textColor="#495057"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_date_week_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category_week_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:text="교통비"
        android:textColor="#868E96 "
        android:textSize="12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_week_detail"
        app:layout_constraintStart_toEndOf="@+id/tv_name_week_detail"
        app:layout_constraintTop_toTopOf="@+id/tv_name_week_detail" />

    <TextView
        android:id="@+id/tv_amount_week_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:gravity="right"
        android:text="8000원"
        android:textColor="#495057"
        android:textSize="13sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>