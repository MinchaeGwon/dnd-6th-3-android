<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ADB5BD</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_bottom_sheet</item>
    </style>

    <style name="CustomAlertDialog">
        <!-- 꽉 채운 화면에 배경 없이 custom view 영역만 보임 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

        <!-- Dim 처리 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!-- Dialog가 센터에 나오도록 함 -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomNumberPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#212529</item>
        <item name="colorControlNormal">#76D9CE</item>
    </style>
</resources>